# =============================================================================
# ARIA — Autonomous Research & Investment Agent
# =============================================================================

# Gemini API Key (for LLM reasoning — optional, works without it)
# Get yours free at https://aistudio.google.com/apikey
GEMINI_API_KEY=...

# ---------------------------------------------------------------------------
# Veridex Passkey Credential (from @veridex/sdk PasskeyManager.register())
# ---------------------------------------------------------------------------
VERIDEX_CREDENTIAL_ID=base64url-encoded-credential-id
VERIDEX_PUBLIC_KEY_X=0x...   # P-256 public key X coordinate (hex bigint)
VERIDEX_PUBLIC_KEY_Y=0x...   # P-256 public key Y coordinate (hex bigint)
VERIDEX_KEY_HASH=0x...       # keccak256(abi.encode(publicKeyX, publicKeyY))

# ---------------------------------------------------------------------------
# Veridex Session Key (agent's budget-constrained spending key)
# ---------------------------------------------------------------------------
VERIDEX_SESSION_KEY=0x...           # hex-encoded secp256k1 private key
VERIDEX_SESSION_ADDRESS=0x...       # derived EVM address

# ---------------------------------------------------------------------------
# Veridex Relayer / Facilitator
# ---------------------------------------------------------------------------
VERIDEX_RELAYER_URL=https://amused-kameko-veridex-demo-37453117.koyeb.app/api/v1
VERIDEX_RELAYER_KEY=

# ---------------------------------------------------------------------------
# Agent Budget Controls
# ---------------------------------------------------------------------------
AGENT_DAILY_LIMIT=50          # daily spend cap in USD
AGENT_PER_TX_LIMIT=5          # per-transaction cap in USD

# ---------------------------------------------------------------------------
# Merchant Server
# ---------------------------------------------------------------------------
MERCHANT_URL=http://localhost:4000
MERCHANT_PORT=4000
MERCHANT_RECIPIENT_ADDRESS=0x...

# Dashboard
DASHBOARD_PORT=3000

# Network
NETWORK=base-sepolia

# ---------------------------------------------------------------------------
# SKALE Nebula (Track 5 — Encrypted Agents / BITE v2, optional)
# ---------------------------------------------------------------------------
SKALE_RPC_URL=https://mainnet.skalenodes.com/v1/green-giddy-denebola
SKALE_CHAIN_ID=1482601649
SKALE_BITE_ENABLED=false        # Enable BITE v2 encrypted conditional transactions

# ---------------------------------------------------------------------------
# CDP Wallet (Track 2 — Coinbase, optional)
# ---------------------------------------------------------------------------
CDP_API_KEY=...
CDP_WALLET_ID=...
